{
  "name": "elm-upgrade-shims",
  "version": "0.1.0",
  "description": "Culture Amp's Elm 0.18-to-0.19 API shims",
  "repository": "https://github.com/cultureamp/elm-upgrade-shims.git",
  "author": "Louis Quinnell <louis.quinnell@cultureamp.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn -s log:build && yarn build:clean && yarn build:copy-test-app && yarn build:unshim",
    "build:clean": "rm -rf build",
    "build:copy-test-app": "cp -R test build",
    "build:unshim": "yarn ts-node scripts/unshim build",
    "test": "yarn build && yarn test:0.18 && yarn test:0.19 && yarn -s test:success || yarn -s test:failure",
    "test:success": "yarn asdf:clean && yarn -s log:success",
    "test:failure": "yarn asdf:clean && yarn -s log:failure && exit 1",
    "test:0.18": "yarn asdf:use-elm-version 0.18.0 && yarn make:0.18",
    "test:0.19": "yarn asdf:use-elm-version 0.19.0 && yarn make:0.19",
    "make:0.18": "yarn -s log:make-0.18 && yes | elm-make --output=/dev/null",
    "make:0.19": "yarn -s log:make-0.19 && yes | elm make ./build/Main.elm --output=/dev/null",
    "asdf:use-elm-version": "yarn asdf:clean && asdf local elm",
    "asdf:clean": "rm -rf .tool-versions elm-stuff",
    "log": "echo '\nðŸŒˆ  elm-upgrade-shims:'",
    "log:build": "yarn -s log 'Copying unshimmed test app to `./build`...'",
    "log:make-0.18": "yarn -s log 'Building `./test` with Elm 0.18...'",
    "log:make-0.19": "yarn -s log 'Building `./build` with Elm 0.19...'",
    "log:success": "yarn -s log 'All builds succeeded! ðŸŽ‰'",
    "log:failure": "yarn -s log 'Build failed. ðŸ˜ž'"
  },
  "dependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^10.11.4",
    "glob": "^7.1.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1"
  }
}
